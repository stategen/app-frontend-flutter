///  由 [stategen.progen]代码生成器初始化，可以手工修改,但如果遇到 keep this ,请保留导出设置以备外部自动化调用
import 'package:flutter/material.dart';
import 'package:fluro/fluro.dart';
import 'package:provider/provider.dart';
import 'msg_provider.dart';


class MsgPage extends StatelessWidget {
  // 路由路径
  static final String path = '/msg';

  // 路由创建方式
  static final Handler handler = Handler(
    handlerFunc: (BuildContext context, Map<String, List<String>> params) {
      return MsgProvider.create(
        child: MsgPage(params: params)
      );
    }
  );

  Map<String, List<String>> params;

  MsgPage({this.params});

  @override
  Widget build(BuildContext context) {
    // 这里提供provider是避免省事，将provider全部配到main下，而不能释放资源
    return MsgProvider.create(
      child: MsgScene(),
    );
  }
}

class MsgScene extends StatefulWidget {

  @override
  _MsgPageState createState() => _MsgPageState();

}

class _MsgPageState extends State<MsgScene> {

  MsgProvider msgProvider;

  @override
  void didChangeDependencies() {
    super.didChangeDependencies();
    // state在整个生部周期只需要拿和注册一次
    msgProvider = MsgProvider.of(context);
  }

  @override
  Widget build(BuildContext context) {
    //var fetched = msgProvider.msgWrapArea.fetched ?? false;
    //if (!fetched) {
    //  msgProvider.xxx(context,);
    //}

    return Text('msg Page 创建成功!');
  }

}